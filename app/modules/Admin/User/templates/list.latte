{block #content}
<div class="row">
	<div class="col-12">
		<div class="card mb-4">
			<div class="card-header pb-0">
				<div class="row">
					<div class="col-lg-6 col-7">
						<h6>Uživatelé</h6>
					</div>
					<div class="col-lg-6 col-5 my-auto text-end">
						<a n:if="$user->isAllowed('Admin:User:add')" n:href=":add" class="btn btn-outline-primary btn-sm mb-0">Přidat uživatele</a>
					</div>
				</div>
			</div>
			<div class="card-body px-0 pt-0 pb-2">
				<div class="table-responsive p-0">
					{control userListGrid}
				</div>
			</div>
		</div>
	</div>
</div>
